generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  hash      String
  createdAt DateTime @default(now())
  projects  Project[]
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id])
  data      String   @default("{}")
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
